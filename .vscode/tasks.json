{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "Build",
		"type": "shell",
		"command": "cmake --build build",
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"presentation": {
		  "reveal": "always",
		  "panel": "shared"
		},
		"problemMatcher": "$gcc"
	  },
	  {
		"label": "Run",
		"type": "shell",
		"command": "start \"${workspaceFolder}/build/TestEnv.exe\"",
		"dependsOn": "Build",
		"presentation": {
		  "reveal": "always",
		  "panel": "shared"
		},
		"problemMatcher": "$gcc"
	  }
	]
  }